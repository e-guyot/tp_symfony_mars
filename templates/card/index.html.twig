{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container">
    <h1>Register a card</h1>

    {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.health) }}
        {{ form_row(form.attack) }}
        {{ form_row(form.description) }}
        {{ form_row(form.cost) }}
        {{ form_row(form.type) }}

        <button class="btn btn-primary">Register</button>
    {{ form_end(form) }}
</div>
{% endblock %}